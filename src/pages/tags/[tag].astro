---
import ArticleList from "@components/ArticleList.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import { getSortedContentV2, getTags, slugify } from "../../utils";

export async function getStaticPaths() {
  const articles = await getCollection("articles")
  const sorted = getSortedContentV2(articles);
  // const sorted = getSortedContent(await Astro.glob("../articles/*.(md|mdx)"));
  const tags = getTags(sorted);

  return Object.keys(tags).map((tag) => {
    return {
      params: {
        tag: slugify(tag),
      },
      props: {
        tag,
        articles: sorted.filter((article) =>
          article.data.tags?.includes(tag)
        ),
      },
    };
  });
}
const { tag, articles } = Astro.props;

const title = `Tagged "${tag}"`;
---

<PageLayout title={title}>
  <ArticleList articles={articles} />
  <p>
    Browse <a href="/tags">by tag</a> or <a href="/articles">all articles</a>.
  </p>
</PageLayout>
