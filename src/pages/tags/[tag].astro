---
import ArticleList from "@components/ArticleList.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import { getTags, slugify, sortCollection } from "src/utils";

export async function getStaticPaths() {
  const articles = sortCollection.articles(await getCollection("articles"));
  const tags = getTags(articles);

  return Object.keys(tags).map((tag) => {
    return {
      params: {
        tag: slugify(tag),
      },
      props: {
        tag,
        articles: articles.filter((article) =>
          article.data.tags?.includes(tag)
        ),
      },
    };
  });
}
const { tag, articles } = Astro.props;

const title = `Tagged "${tag}"`;
---

<PageLayout title={title}>
  <ArticleList articles={articles} />
  <p>
    Browse <a href="/tags">by tag</a> or <a href="/articles">all articles</a>.
  </p>
</PageLayout>
