---
import BoyoHeader from "@components/applets/BoyoHeader.svelte";
import BoyoImageGallery from "@components/BoyoImageGallery.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

export async function getStaticPaths() {
  return ["Sam", "Ezra"].map((name) => ({
    params: {
      boyo: name.toLowerCase(),
    },
    props: {
      name,
    },
  }));
}

const { name } = Astro.props;

const links: Array<[string, string, string, boolean]> = [
  ["🧰", "McP Tools", "/tools", true],
  ["🐢", "Turtle Guide", "https://seanmcp.github.io/turtle-guide", false],
  ["🐷", "Paint Pig", "https://seanmcp.github.io/paint-pig", false],
  ["🔦", "Spotlight", "https://seanmcp.github.io/spotlight", false],
  ["🧠", "Memory Game", "https://seanmcp.github.io/memory-game", false],
  ["🦝", "Reading Raccoon", "https://seanmcp.github.io/reading-raccoon", false],
  ["🌱", "Khan Academy", "https://khanacademy.org", true],
  ["🐲", "Code.org", "https://studio.code.org/sections/LJKCJP", true],
  ["🐱", "Bongo Cat", "https://bongo.cat", false],
  ["🌲", "Tree builder", "https://reacttraining.com/tree/", true],
  ["🧅", "Wick Editor", "https://www.wickeditor.com/editor/", true],
  ["🏀", "Dot dot dot", "http://lalo.li/ddd/", true]
];
---

<BaseLayout title={name}>
  <main>
    <BoyoHeader client:idle name={name} />

    <p style="text-align: center">
      Let's learn something on the computer today!
    </p>

    <h2>Links</h2>

    <section>
      {
        links.map(([emoji, label, url, isForSamOnly]) => {
          if (name === "Ezra" && isForSamOnly) {
            return null;
          }
          return (
            <a href={url}>
              <span>{emoji}</span>
              <small>{label}</small>
            </a>
          );
        })
      }
    </section>

    <h2>GIFs</h2>

    <BoyoImageGallery name={name} />
  </main>
</BaseLayout>

<style>
  section {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }

  section a {
    align-items: center;
    border: 4px solid var(--off-background);
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem;
    text-decoration: none;
    text-align: center;
  }

  section a span {
    font-size: 2.5rem;
  }

  section a:where(:hover, :focus) {
    border-color: var(--link-color);
    transform: scale(1.1);
  }
</style>
