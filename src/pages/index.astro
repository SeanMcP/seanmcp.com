---
import ActivityGraph from "@components/ActivityGraph.astro";
import Feed from "@components/Feed.astro";
import Pagefind from "@components/Pagefind.astro";
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout
  documentTitle="The homepage of Sean McPherson"
  title="Sean McPherson"
  withoutH1
>
  <h1><em>Sean McP</em>herson</h1>
  <p class="lede()">
    Software engineer @ <a href="https://khanacademy.org" target="_blank"
      >Khan Academy</a
    >
  </p>

  <br />

  <Pagefind />

  <br />

  <h2>Feed</h2>

  <Feed count={5} />

  <br />

  <h2>Activity</h2>

  <ActivityGraph />
</PageLayout>

<style>
  h1 {
    color: var(--off-background);
    transition: color 200ms ease-in-out;
  }
  h1 em {
    color: var(--text-color);
    font-style: initial;
  }
  h1:hover {
    color: var(--text-color);
  }
  @media screen and (min-width: 600px) {
    h1,
    h1 + p {
      text-align: center;
    }
  }
</style>
