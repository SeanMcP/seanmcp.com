---
layout: base.liquid
foot: >-
---
<header class="site">
    <a href="/">seanmcp.com</a>
</header>
<main>
    <header>
        <h1>{{ title }}</h1>
        {%- if date -%}
            <time datetime="{{ date }}">{{ date | readable_date }}</time>
        {%- elsif tagline -%}
            <p style="color: var(--faint-text);">{{ tagline }}</p>
        {%- endif -%}
    </header>
    {% comment %} <layout-content style="padding-block: 3rem;"> {% endcomment %}
    {% comment %} </layout-content> {% endcomment %}
    {% comment %} <layout-content id="content" class="{%- if prose -%}prose{%- endif -%}" style="padding-block-end: 8rem;"> {% endcomment %}
        {% if flags contains "RSS-ONLY" -%}
        <call-out type="info">
            This is a special article for <strong>the RSS Club</strong>, but feel
            free to save or share this link. You can join by subscribing to <a href="/rss.xml">my RSS feed</a>.
        </call-out>
        {%- endif %}

        {{ content }}

        {% if leaf -%}
        <footer>
            <a href="mailto:sean@seanmcp.com?subject=RE: {{ title }}" id="comment-link">Reply by email</a>
            <bible-verse>{{verse | default: "Romans 5:8" }}</bible-verse>
        </footer>
        {%- endif %}
    {% comment %} </layout-content> {% endcomment %}
</main>
<footer class="site">
    Since 2018 (SDG)
</footer>

<style>
    html {
        background-color: var(--bg);
    }

    body {
        display: grid;
        grid-template-rows: max-content auto max-content;
        grid-template-columns: 1fr 120px 60ch 120px 1fr;
        grid-template-areas:
            "header header header header header"
            "full-start wide-start content wide-end full-end"
            "footer footer footer footer footer";
        ;
        min-height: 100vh;
    }

    .site {
        background-image: var(--pattern-diagonal-background-image);
        padding: 1rem;
        text-align: center;
    }

    header.site {
        grid-area: header;
    }

    main {
        display: grid;
        font-family: var(--serif);
        gap: 0;
        grid-column: full-start / full-end;
        grid-template-columns: subgrid;
        line-height: 1.2;
        margin-block-end: 4rem;

        > * {
            grid-column: content;
            margin-block-end: 0;
        }

        img {
            display: block;
            margin-inline: auto;
            max-width: 100%;
        }

        header {
            margin-block: 4rem;
        }

        footer {
            display: flex;
            justify-content: space-between;
            margin-block-start: 4rem;
        }
    }

    footer.site {
        color: var(--faint-text);
        font-size: var(--step--1);
        grid-area: footer;
    }

    h1 {
        font-size: var(--step-4);
        margin-block: 0;
        margin-inline: auto;
    }

    h1 + p {
        margin-block-start: 0;
    }

    time {
        display: block;
        font-size: var(--step--1);
        letter-spacing: 0.1ch;
        text-transform: uppercase;
    }
</style>
<script type="module" src="/js/keyboard-shortcuts.js"></script>
