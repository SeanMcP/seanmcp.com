---
import navigation from "../data/navigation";
import socials from "../data/socials";
---

<footer>
  <hr />
  <div>
    <b>SeanMcP.com</b><br />
    <small>Copyright &copy; 2018 - {new Date().getFullYear()} Sean McPherson (SDG)</small>
  </div>
  <div class="site-footer__nav">
    <section>
      <h2>Navigation</h2>
      <nav aria-label="secondary">
        {
          navigation.secondary.map((link) => (
            <a href={link.url}>{link.label}</a>
          ))
        }
      </nav>
    </section>
    <section>
      <h2>Socials</h2>
      <nav>
        {socials.map((link) => <a href={link.url}>{link.label}</a>)}
      </nav>
    </section>
  </div>
</footer>

<style>
  footer hr {
    margin-top: 0;
  }

  h2 {
    font-size: 1rem;
    margin-bottom: 0rem !important;
  }

  nav {
    display: flex;
    flex-direction: column;
  }

  nav a {
    font-size: small;
    margin-top: 0.375rem;
  }

  @media screen and (min-width: 768px) {
    .site-footer__nav {
      display: grid;
      gap: 1rem;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
