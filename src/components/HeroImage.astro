---
interface Props {
  /** Filename within the public/images/ directory */
  image?: string;
}

const { image } = Astro.props;
// Support legacy image paths for now
const path = image?.includes("/img/") ? image : `/images/${image}`;
---

{image && <div style={{ backgroundImage: `url(${path})` }} />}

<style>
  div {
    background-color: var(--off-background);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    /* Complementary height for 16:9 aspect ratio */
    height: calc(640px * 9 / 16);
    margin-bottom: 2rem;
  }
</style>
