---
const { url } = Astro.props;
---

<span
  aria-hidden
  role="img"
  style={{
    backgroundImage: `url(${url})`,
  }}
>
</span>

<style>
  span {
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    height: 1.25rem;
    margin-right: 0.25rem;
    transform: translateY(25%);
    width: 1.25rem;
  }
</style>
